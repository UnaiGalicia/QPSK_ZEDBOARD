/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include <time.h>

//#include “xparameters.h”

void etengabe();
void aukera();

int main()
{
	 init_platform();

	 printf("QPSK Moduladorea Hamsterrarekin Zynqean\nAritz Arroita, Aintzel Bereziartua, Unai Galicia\n");
	 int  auk=0;
	 while(auk!=3){
		 printf("Zer egin nahi dezu?\n1. lau sinboloak bata bestearen atzetik bidali etengabe\n2. Zuk aukeratutako sinbolo bat bidali\n3. Irten\n ");
		 scanf("%d", &auk);
		 switch(auk){

		 	 case(1): etengabe(); break;
		 	 case(2): aukera();break;
		 	 default: printf("Aukera ez da egokia");


	 }


	 }
	printf("Agur!");
	cleanup_platform();
	return 0;
}







void etengabe(){
	unsigned int egoera = 0x00000000;
	int i=0, terminate=1;
	double elapsed;
	time_t start, end;
	start = time(NULL);
		 while(terminate)
		{
			 if(*(unsigned int*)((0x43c00004)) == egoera){

				 switch(i){
				 case 0: *(unsigned int*)(0x43c00000)=0x0af50af4; break;
				 case 1: *(unsigned int*)(0x43c00000)=0x4af50af4; break;
				 case 2: *(unsigned int*)(0x43c00000)=0x8af50af4; break;
				 case 3: *(unsigned int*)(0x43c00000)=0xfaf50af4; break;
				 default: i=0;}

				 i=i+1;
				 if(i==4)
					 i=0;

			 	 printf("Idatzi da\n");

			 }

			 else
				 printf("Ezin da irakurri - Egoera: %x\n \n", *(unsigned int*)((0x43c00004)));


		}
		 end = time(NULL);
		 elapsed =(double) difftime(end, start);
		 if (elapsed >= 90.0)
		    terminate = 0;
		printf("Amaitu da denbora\n");
					 //else  // No need to sleep when 90.0 seconds elapsed.
					  //      usleep(50000);
}


void aukera(){
	unsigned int egoera = 0x00000000;
	int sinb=0,  kopurua=0;
	printf("sartu zein sinbolo nahi dezun: \n00 --> 0 tekla0\n\n01 --> 1 tekla0\n\n02 --> 2 tekla0\n\n03 --> 3 tekla0\n");
	scanf("%d", &kopurua);
	if(sinb >= 0 && sinb <= 3){
		int a=0;
		for(a=0; a<kopurua; a++)
		{
			 if(*(unsigned int*)((0x43c00004)) == egoera){

				 switch(sinb){
				 case 0: *(unsigned int*)(0x43c00000)=0x0af50af4; break;
				 case 1: *(unsigned int*)(0x43c00000)=0x4af50af4; break;
				 case 2: *(unsigned int*)(0x43c00000)=0x8af50af4; break;
				 case 3: *(unsigned int*)(0x43c00000)=0xfaf50af4; break;
				 default: sinb=0;}



			 }

			 else
				 printf("Ezin da irakurri - Egoera: %x\n \n", *(unsigned int*)((0x43c00004)));


		}}
	else
		printf("Sartu sinbolo egoki bat\n");
}

